{
  "name": "functions",
  "scripts": {
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "build": "npm run lint && tsc",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "test": "jest",
    "dbreset": "firebase firestore:delete --all-collections",
    "dbreset:publishers": "firebase firestore:delete -y --shallow publishers",
    "dbseed": "npm run dbseed:publishers",
    "dbseed:publishers": "node lib/commands/dbseed.js publishers seeds/publishers.tsv"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "commander": "^6.2.1",
    "csv-parse": "^4.14.2",
    "firebase": "^8.2.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0"
  },
  "devDependencies": {
    "@types/eslint": "^7.2.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@types/prettier": "^2.1.6",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.3.0",
    "firebase-functions-test": "^0.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^3.8.0"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts?|js?)$",
    "moduleFileExtensions": [
      "ts",
      "json",
      "js"
    ]
  }
}
